                <p class="ml-4 text-white uppercase">Product List</p>
            </div>
            <%= render 'form' %>
        </div>
    </div>
    <div class="w-3/5">
        <div class="bg-white shadow-lg mx-auto border-b-4 border-indigo-800 rounded-2xl overflow-hidden  hover:shadow-2xl transition duration-500 transform hover:scale-105 cursor-pointer" >
            <div class="bg-indigo-800  flex h-20 p-4 items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
                </svg>
                <p class="ml-4 text-white uppercase">Market List</p>
            </div>
            <div class="min-w-max w-full table-auto">
                <div>
                    <div class="flex bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                        <div class="w-1/2 py-3 px-2 text-left">Id</div>
                        <div class="w-1/2 py-3 px-6 text-left">Code</div>
                        <div class="w-1/2 py-3 px-6 text-left">Description</div>
                        <div class="w-1/2 py-3 px-6 text-left">Price</div>
                        <div class="w-1/2 py-3 px-6 text-left">Qtde</div>
                        <div class="w-1/2 py-3 px-6 text-left">Actions</div>
